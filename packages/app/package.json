{
  "name": "@reviewflow/app",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run ui:build --watch\" \"npm run server:dev\"",
    "build": "npm run ui:build && npm run server:build",
    "ui:build": "vite build",
    "ui:dev": "vite build --watch",
    "server:dev": "vite-node src/server/index.ts --watch",
    "server:build": "vite build --config vite.server.config.ts",
    "start": "node dist/server/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "simple-git": "^3.20.0",
    "sqlite3": "^5.1.6",
    "diff": "^5.1.0",
    "uuid": "^9.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tanstack/react-query": "^5.12.0",
    "zustand": "^4.4.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/diff": "^5.0.8",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-node": "^1.0.0",
    "vite-plugin-node": "^3.0.2",
    "vite-plugin-dts": "^3.6.0",
    "concurrently": "^8.2.0"
  }
}