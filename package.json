{
  "name": "reviewflow",
  "version": "0.1.0",
  "private": true,
  "description": "Code review support tool with interactive diff viewer",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "ci": "pnpm build && pnpm type-check && pnpm lint && pnpm test",
    "install-cli": "pnpm build && cd packages/cli && npm link",
    "uninstall-cli": "cd packages/cli && npm unlink -g @reviewflow/cli"
  },
  "workspaces": [
    "packages/frontend",
    "packages/backend", 
    "packages/cli",
    "packages/shared"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.14.0"
}